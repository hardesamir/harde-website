<script>
window.addEventListener('DOMContentLoaded', function() {
    const heroImages = [
        {% for image in collections.heroImages %}'{{ image.url }}'{% if not loop.last %},{% endif %}{% endfor %}
    ];
    const bg1 = document.getElementById('hero-bg-1');
    const bg2 = document.getElementById('hero-bg-2');
    let current = 0;
    let showing = 1; // 1 or 2
    function setBg(div, img) {
        div.style.backgroundImage = `url('${img}')`;
        div.style.backgroundSize = 'cover';
        div.style.backgroundPosition = 'center';
        div.style.backgroundRepeat = 'no-repeat';
    }
    if (heroImages.length > 0) {
        setBg(bg1, heroImages[0]);
        setBg(bg2, heroImages[1 % heroImages.length]);
        bg1.style.opacity = 1;
        bg2.style.opacity = 0;
        setInterval(() => {
            const next = (current + 1) % heroImages.length;
            if (showing === 1) {
                setBg(bg2, heroImages[next]);
                bg2.style.opacity = 1;
                bg1.style.opacity = 0;
                showing = 2;
            } else {
                setBg(bg1, heroImages[next]);
                bg1.style.opacity = 1;
                bg2.style.opacity = 0;
                showing = 1;
            }
            current = next;
        }, 6000);
    }
});
</script>

