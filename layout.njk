            gap: 2rem;
        }

        .experience-item {
            background: rgba(255, 255, 255, 0.05);
            padding: 2rem;
            border-radius: 10px;
            border: 1px solid rgba(201, 147, 13, 0.2);
        }

        .experience-item h3 {
            color: #c9930d;
            margin-bottom: 1rem;
        }

